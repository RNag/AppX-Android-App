<?xml version="1.0" encoding="UTF-8"?>

    <LinearLayout android:orientation="vertical" android:layout_height="fill_parent" android:layout_width="fill_parent" tools:context=".ActivitySettings" xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView android:layout_height="wrap_content" android:layout_width="fill_parent" android:textSize="15dp" android:text="General Settings" android:gravity="center_horizontal"
        android:id="@+id/GeneralSettings" />

    <EditText android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="User Email:" android:layout_below="@+id/textView" android:layout_alignParentLeft="true" android:layout_alignParentStart="true" android:layout_marginTop="6dp" android:paddingLeft="20dp" android:id="@+id/edit_Email"
        android:focusableInTouchMode="false"
        android:focusable="false" />

    <CheckBox android:layout_height="wrap_content" android:layout_width="300dp" android:text="Remember Me " android:layout_below="@+id/edit_Email" android:layout_marginTop="16dp" android:id="@+id/checkbox_remember_me" android:checked="true" android:layout_alignParentRight="true"
        android:layout_marginLeft="23dp" />

    <EditText android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="Password:" android:layout_below="@+id/checkbox_remember_me" android:layout_alignParentLeft="true" android:layout_alignParentStart="true" android:layout_marginTop="6dp" android:paddingLeft="20dp" android:id="@+id/edit_Password"
        android:focusableInTouchMode="false"
        android:focusable="false"/>

    <Switch android:layout_height="wrap_content" android:layout_width="300dp" android:text="Display Password" android:layout_below="@+id/edit_Password" android:layout_marginTop="16dp" android:paddingLeft="20dp" android:id="@+id/switch_password" android:textOff="No" android:textOn="Yes"/>

    <Switch android:layout_height="wrap_content" android:layout_width="300dp" android:text="Email Subscriptions" android:layout_below="@+id/switch_password" android:layout_marginTop="16dp" android:paddingLeft="20dp" android:id="@+id/switch_subscription" android:textOff="No" android:textOn="Yes"/>

    <TextView android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/filter_Categories"/>

    <TextView android:layout_height="wrap_content" android:layout_width="fill_parent" android:textSize="15dp" android:text="Profile Settings" android:gravity="center_horizontal"
        android:id="@+id/ProfSettings" />

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="102dp"
        android:text="Profile:"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="6dp"
        android:paddingLeft="20dp"
        android:id="@+id/editText"
        android:focusableInTouchMode="false"
        android:focusable="false"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View/edit my profile"
        android:id="@+id/link_to_profile"
        android:textColor="#FF000000"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="23dp" />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="15dp"
        android:text="Preferences"
        android:gravity="center_horizontal"
        android:id="@+id/textView34"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="6dp" />

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="243dp"
        android:text="Num. of entries per page:"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="6dp"
        android:paddingLeft="20dp"
        android:id="@+id/editText2"
        android:focusableInTouchMode="false"
        android:focusable="false"/>

    <GridView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/gridView"
        android:numColumns="4"
        android:focusableInTouchMode="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
    android:listSelector="@android:color/holo_orange_light" />
</LinearLayout>