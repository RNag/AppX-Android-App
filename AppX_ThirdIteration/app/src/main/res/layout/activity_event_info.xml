<?xml version="1.0"?>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin" android:paddingRight="@dimen/activity_horizontal_margin" android:paddingTop="@dimen/activity_vertical_margin" android:paddingBottom="@dimen/activity_vertical_margin" android:background="#006699">

    <TableLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/listLayout2" android:shrinkColumns="*" android:stretchColumns="*" android:layout_margin="5dp" android:orientation="vertical"> </TableLayout>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/editWho" android:textSize="@dimen/abc_action_bar_content_inset_material" android:layout_centerHorizontal="true" android:layout_below="@+id/fillWhat" android:text="Sponsored By" android:textColor="#FFFFFF"
        android:layout_marginTop="20dp" />

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/editWhen" android:textSize="@dimen/abc_action_bar_content_inset_material" android:layout_centerHorizontal="true" android:layout_below="@+id/fillWho" android:text="On" android:textColor="#FFFFFF"
        android:layout_marginTop="20dp" />

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/editWhere" android:textSize="@dimen/abc_action_bar_content_inset_material" android:layout_centerHorizontal="true" android:layout_below="@+id/fillWhen" android:text="At" android:textColor="#FFFFFF"
        android:layout_marginTop="50dp" />

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/fillWho"
        android:layout_below="@+id/editWho" android:hint="Organization name"
        android:layout_marginTop="5dp"
        android:gravity="center|center_horizontal"
        android:layout_centerInParent="true" />

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/fillWhat" android:textSize="40dp" android:hint="Event Name" android:layout_alignStart="@+id/listLayout2" android:layout_alignLeft="@+id/listLayout2" android:layout_alignEnd="@+id/listLayout2" android:layout_alignRight="@+id/listLayout2"
        android:textColor="#ebebeb" />

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/fillWhen"
        android:layout_below="@+id/editWhen" android:hint="Date"
        android:layout_marginTop="5dp"
        android:layout_centerInParent="true"
        android:gravity="center|center_horizontal" />

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/fillWhere"
        android:layout_below="@+id/editWhere" android:hint="Location"
        android:layout_marginTop="5dp"
        android:layout_centerInParent="true"
        android:gravity="center|center_horizontal" />

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/fillDescription" android:layout_below="@+id/fillWhere" android:hint="full description" android:layout_alignStart="@+id/listLayout2" android:layout_alignLeft="@+id/listLayout2" android:layout_alignEnd="@+id/listLayout2" android:layout_alignRight="@+id/listLayout2" android:layout_alignParentBottom="true"
        android:layout_marginTop="80dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fromHeader"
        android:textSize="12sp"
        android:text="From:"
        android:textColor="#d9d9d9"
        android:textStyle="italic"
        android:layout_below="@+id/editWhen"
        android:layout_alignLeft="@+id/fillWhat"
        android:layout_alignStart="@+id/fillWhat" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/toHeader"
        android:textSize="12sp"
        android:text="To:"
        android:textColor="#d9d9d9"
        android:layout_below="@+id/editWhen"
        android:layout_toRightOf="@+id/fillWho"
        android:layout_toEndOf="@+id/fillWho"
        android:textStyle="italic"
        android:layout_marginLeft="-20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fromWhen"
        android:text="2/2/15"
        android:layout_below="@+id/fillWhen"
        android:layout_alignLeft="@+id/fromHeader"
        android:layout_alignStart="@+id/fromHeader" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fromTime"
        android:text="9:00 AM"
        android:layout_alignTop="@+id/fromWhen"
        android:layout_toLeftOf="@+id/editWho"
        android:layout_toStartOf="@+id/editWho"
        android:layout_marginRight="-10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/toWhen"
        android:text="2/2/15"
        android:layout_alignTop="@+id/toTime"
        android:layout_marginLeft="210dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/toTime"
        android:text="9:00 AM"
        android:layout_below="@+id/fillWhen"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView31"
        android:textSize="@dimen/abc_action_bar_content_inset_material"
        android:text="More Info:"
        android:textColor="#FFFFFF"
        android:layout_alignTop="@+id/fillDescription"
        android:layout_alignLeft="@+id/fillDescription"
        android:layout_alignStart="@+id/fillDescription"
        android:layout_marginTop="-20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addressHeader"
        android:textSize="12sp"
        android:text="Address:"
        android:textColor="#d9d9d9"
        android:textStyle="italic"
        android:layout_above="@+id/fillDescription"
        android:layout_alignLeft="@+id/textView31"
        android:layout_alignStart="@+id/textView31" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cityHeader"
        android:textSize="12sp"
        android:text="City:"
        android:textColor="#d9d9d9"
        android:textStyle="italic"
        android:layout_above="@+id/fillDescription"
        android:layout_alignLeft="@+id/fillWhen"
        android:layout_alignStart="@+id/fillWhen"
        android:layout_marginLeft="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/stateHeader"
        android:textSize="12sp"
        android:text="State:"
        android:textColor="#d9d9d9"
        android:textStyle="italic"
        android:layout_above="@+id/fillDescription"
        android:layout_toRightOf="@+id/toWhen"
        android:layout_toEndOf="@+id/toWhen"
        android:layout_marginLeft="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/fillAddress"
        android:text="Sample Address"
        android:layout_below="@+id/addressHeader"
        android:layout_marginTop="5dp"
        android:layout_alignLeft="@+id/addressHeader"
        android:layout_alignStart="@+id/addressHeader"
        android:layout_toLeftOf="@+id/fillWhen"
        android:layout_toStartOf="@+id/fillWhen" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fillCity"
        android:text="City Name"
        android:layout_alignTop="@+id/fillAddress"
        android:layout_toRightOf="@+id/fillWhen"
        android:layout_toEndOf="@+id/fillWhen"
        android:layout_marginLeft="-3dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fillState"
        android:text="State Code"
        android:layout_alignTop="@+id/fillCity"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/stateHeader"
        android:layout_alignStart="@+id/stateHeader"
        android:gravity="center|center_horizontal" />

</RelativeLayout>