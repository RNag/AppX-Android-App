<?xml version="1.0"?>

<RelativeLayout android:background="#006699" tools:context=".MainActivity" android:paddingBottom="@dimen/activity_vertical_margin" android:paddingTop="@dimen/activity_vertical_margin" android:paddingRight="@dimen/activity_horizontal_margin" android:paddingLeft="@dimen/activity_horizontal_margin" android:layout_height="match_parent" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textColor="#FFFFFF"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:id="@+id/textView"
        android:text="What's Going On Around You"
        android:textAppearance="?android:attr/textAppearanceLarge"
        />

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textColor="#FFFFFF"
        android:id="@+id/editWho"
        android:text="Who:"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:layout_marginTop="57dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView"
        />

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textColor="#FFFFFF"
        android:id="@+id/editWhat"
        android:text="What:"
        android:layout_alignEnd="@+id/editWho"
        android:layout_alignRight="@+id/editWho"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/editWho"/>

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textColor="#FFFFFF"
        android:id="@+id/editWhen"
        android:text="When:"
        android:layout_alignEnd="@+id/editWhat"
        android:layout_alignRight="@+id/editWhat"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/editWhat"
        />

    <EditText android:layout_height="wrap_content" android:layout_width="wrap_content" android:textColor="#FFFFFF" android:id="@+id/editWhere" android:text="Where:" android:layout_alignEnd="@+id/editWhen" android:layout_alignRight="@+id/editWhen" android:layout_alignParentStart="true" android:layout_alignParentLeft="true" android:layout_below="@+id/editWhen"/>

    <EditText android:layout_height="wrap_content" android:layout_width="wrap_content" android:textColor="#FFFFFF" android:id="@+id/editHow" android:text="How:" android:layout_alignEnd="@+id/editWhere" android:layout_alignRight="@+id/editWhere" android:layout_alignParentStart="true" android:layout_alignParentLeft="true" android:layout_below="@+id/editWhere"/>

    <EditText android:layout_height="wrap_content" android:layout_width="wrap_content" android:textColor="#FFFFFF" android:id="@+id/editMoreEvents" android:text="More Events Like This? #" android:layout_alignEnd="@+id/editHow" android:layout_alignRight="@+id/editHow" android:layout_alignParentStart="true" android:layout_alignParentLeft="true" android:layout_below="@+id/editHow"/>

</RelativeLayout>