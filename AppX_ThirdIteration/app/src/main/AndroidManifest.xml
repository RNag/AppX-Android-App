<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="appx_homescreen.appx" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ListActivity"
            android:label="Events Listed" >
        </activity>

        <activity
            android:name=".RegisterActivity"
            android:label="@string/title_activity_register">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="appx_homescreen.appx.LoginActivity" />
        </activity>

        <activity
            android:name=".SplashActivity"
            android:label="Home" >
        </activity>

        <activity
            android:name=".AddEvent"
            android:label="Add Event" >
        </activity>

        <activity
            android:name=".EventPage"
            android:label="Event Description Page" >
        </activity>

        <activity
            android:name=".SponsorPage"
            android:label="Organization Description Page" >
        </activity>

        <activity
            android:name=".UserProfile"
            android:label="Your Profile" >
        </activity>

        <activity
            android:name=".Settings.SettingsActivity"
            android:label="Settings" >
        </activity>

    </application>

</manifest>

